<div>
    <div class="modal-header">
        <h3 class="modal-title">{{vm.localize('CreateTitle')}}</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label for="TitleInput" class="col-lg-2 control-label">{{vm.localize('Title')}}:</label>
                    <div class="col-lg-10">
                        <input ng-model="vm.question.title" type="text" class="form-control" name="TitleInput" placeholder="{{vm.localize('TitleDescription')}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="TextInput" class="col-lg-2 control-label">{{vm.localize('Text')}}:</label>
                    <div class="col-lg-10">
                        <textarea ng-model="vm.question.text" class="form-control" rows="5" name="TextInput" placeholder="{{vm.localize('EnterDescriptionHere')}}">></textarea>
                        <span class="help-block">{{vm.localize('TextRemark')}}</span>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="vm.cancel()">{{vm.localize('Cancel')}}</button>
        <button class="btn btn-primary" ng-click="vm.save()">{{vm.localize('Submit')}}</button>
    </div>
</div>