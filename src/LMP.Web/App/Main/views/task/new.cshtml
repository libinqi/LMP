<div ng-controller="app.views.task.new as vm">
    <form id="NewTaskForm" role="form" name="newTaskForm" novalidate>
        <div class="form-group">
            <label for="TaskDescription">{{vm.localize('TaskDescription')}}</label>
            <textarea id="TaskDescription" ng-model="vm.task.description" class="form-control" rows="3" placeholder="{{vm.localize('EnterDescriptionHere')}}" required></textarea>
        </div>
        <div class="form-group">
            <label for="TaskAssignedPerson">{{vm.localize('AssignTo')}}</label>
            <select id="TaskAssignedPerson" class="form-control" ng-model="vm.task.creatorUserId" ng-options="person.id as person.userName for person in vm.people">
                <option value="">{{vm.localize('SelectPerson')}}</option>
            </select>
        </div>
        <button ng-click="vm.saveTask()" ng-disabled="newTaskForm.$invalid" type="submit" class="btn btn-primary">{{vm.localize('CreateTheTask')}}</button>
    </form>
</div>